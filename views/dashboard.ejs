<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DashBoard Page</title>
     <link rel="stylesheet" href="styles/dashboardStyle.css">
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 h-screen flex flex-col items-center">

<!-- Navbar -->
<nav class="bg-white p-4 w-full shadow-md mb-6">
    <div class="flex justify-between items-center">
        <h2 class="text-2xl font-semibold">Dashboard</h2>
        <div class="flex space-x-4">
            <a href="/addApi" target="_blank" class="btn-nav">Add New API</a>
            <a href="/logout"  class="btn-nav">Logout</a>
        </div>
    </div>
</nav>

<div class="bg-white p-8 rounded shadow-md w-full max-w-4xl">

    <!-- Greeting -->
    <h3 class="text-lg mb-4">Hi <%= name %></h3>

    <!-- Routes Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
        <% router.forEach(item => { %>
            <div class="border border-gray-300 rounded-lg p-6 shadow-md">
                <h2 class="pb-3 text-lg font-medium">
                    API at route
                    <a target="_blank" href="/api/<%= name %>/<%= item.routePath %>" class="text-blue-500 hover:text-blue-700 hover:underline"> /<%= item.routePath %> </a>
                </h2>

                <h2 class="pb-3 text-lg font-medium">Route Name: <%= item.routeName %></h2>
                <h3 class="pb-3 font-bold">Route Description</h3>
                <p class="pb-3">this is an <%= item.accessType %> api</p>
                <p class="mb-4"><%= item.routeDescription %></p>

                <button onclick="deleteRoute('<%= item.routeName %>')" class="btn-delete">Delete</button>
            </div>
        <% }); %>
    </div>

    <!-- Action Buttons -->


</div>

<!-- Delete Route Script -->
<script src="deleteRoute.js"></script>

</body>



</html>

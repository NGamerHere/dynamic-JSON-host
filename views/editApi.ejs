<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit API</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

<div class="container mx-auto px-4 py-8">
    <div class="max-w-xl mx-auto bg-white rounded-lg shadow-md p-8">

        <% if (editData === 'one') { %>
            <h1 class="text-2xl font-bold mb-4">Which API do you want to edit?</h1>
            <form method="post" action="/editApi" class="space-y-4">
                <% routeNameData.forEach(item => { %>
                    <label class="flex items-center space-x-2">
                        <input type="radio" name="routeName" value="<%= item.routeName %>" class="text-blue-500">
                        <span><%= item.routeName %></span>
                    </label>
                <% }) %>
                <button type="submit" class="bg-blue-500 text-white px-4 py-3 rounded font-medium w-full hover:bg-blue-600 transition duration-300">Edit</button>
            </form>
        <% } %>

        <% if (editData === 'two') { %>
            <h2 class="text-xl font-bold mb-4">Edit your API: <%= data.routeName %></h2>
            <form method="post" action="/editApi" class="space-y-4">
                <input type="hidden" value="<%= data.routeName %>" name="routeName">
                <textarea name="routeData" rows="15" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"><%= JSON.stringify(data.routeData) %></textarea>
                <button type="submit" class="bg-blue-500 text-white px-4 py-3 rounded font-medium w-full hover:bg-blue-600 transition duration-300">Edit</button>
            </form>
        <% } %>

    </div>
</div>

</body>
</html>
